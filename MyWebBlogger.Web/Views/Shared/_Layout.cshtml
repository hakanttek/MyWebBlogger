                    </defs>
                </svg>

                <ul class="navbar-nav col-lg-6 justify-content-lg-center">
                    @foreach(Hyperlink hl in HomeModel.DEFAULT.NavBar)
                    {
                        if(hl.HasChild)
                        {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="@hl.Reference" data-bs-toggle="dropdown" aria-expanded="false">@hl.Label</a>
                            <ul class="dropdown-menu">
                            @foreach(Hyperlink child_hl in hl.Children)
                            {
                                <li><a class="dropdown-item @child_hl.Class" href="@child_hl.Reference">@child_hl.Label</a></li>
                            }
                            </ul>
                        </li>
                        }
                        else
                        {
                            <li class="nav-item" disabled>
                                <a class="nav-link @hl.Class" aria-current="page" href="@hl.Reference" aria-disabled="true">@hl.Label</a>
                            </li>
                        }
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>
    <footer class="footer text-muted bg-body-tertiary rounded shadow">
        <div class="container">
            &copy; 2023 - Hakan Tek - <a href="/privacy" class="link-secondary link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover">Privacy</a>

        </div>
    </footer>
    <script src="~/js/color-modes.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
