@using MyWebBlogger.Web.Models.Component;
@using MyWebBlogger.Web.Models.Home;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyWebBlogger</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MyWebBlogger.Web.styles.css" asp-append-version="true" />
    @{
        string uri = "https://cdn.jsdelivr.net/npm/@docsearch/css@3";
    }
    <link rel="stylesheet" href="~/css/color-modes.css">
    @{
        uri = "https://unpkg.com/@splinetool/viewer@0.9.436/build/spline-viewer.js";
    }
    <script type="module" src="@uri"></script>

    <!-- Core build with no theme, formatting, non-essential modules -->
    <link href="~/css/quill.snow.css" rel="stylesheet">
</head>
